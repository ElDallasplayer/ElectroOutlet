@using PrincipalObjects.Objects
@{

    User user = (User)ViewData["ActiveUser"];
    ViewData["Title"] = "Home Page";
}

@* <div class="hasBlur">
</div> *@
<div class="row p-0 mt-4">
    <div class="row p-0 m-0 cards justify-content-around">

        @if (user.EsAdmin)
        {
            <div class="card col-8 col-md-6 col-lg-2 cardFather" id="ConfigGeneralsButton">
                <i class="mdi mdi-cog-box principalIcon">
                    <h5 class="fw-bolder cardTitlePrincipal text-center">GENERALES</h5>
                </i>
            </div>

            <div class="card col-8 col-md-6 col-lg-2 cardFather" id="UsersButton">
                <i class="mdi mdi-account-edit principalIcon">
                    <h5 class="fw-bolder cardTitlePrincipal text-center">USUARIOS</h5>
                </i>
            </div>
        }
        
    </div>
</div>

<script>
    $("#ConfigGeneralsButton").on("click", () => {
        StartLoader();
        window.location.replace('@Url.Action("EditConfiguration","Configuration")?id=' + @user.Id);
    })

    $("#UsersButton").on("click", () => {
        StartLoader();
        window.location.replace('@Url.Action("EditUsers","Configuration")?id=' + @user.Id);
    })
</script>
