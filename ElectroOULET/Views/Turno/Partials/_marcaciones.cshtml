@using NonFactors.Mvc.Grid
@using PrincipalObjects.Objects;
@model List<Marcations>;

@Html.Grid(Model).Build(columns =>
    {
        columns.Add(c => c.EmpleadoNombre).Titled("Empleado").Sortable(true);
        columns.Add(c => c.marcDate.ToString("dd/MM/yyyy")).Titled("Fecha").Sortable(true);
        columns.Add(c => c.marcDate.ToString("HH:mm:ss")).Titled("Hora").Sortable(true);
        columns.Add(c => c.marcDirection == PrincipalObjects.Enums.mDirection.In?"Entrada":"Salida").Titled("Sentido").Sortable(true);

        columns.Add(c => c.marcDescription).Titled("Descripcion").Sortable(true);

        columns.Add(c => Html.Raw("<i class='mdi mdi-pencil-box' id='"+ c.marcId +"' style='font-size: 25px; cursor: pointer;'></i>")).Titled(Html.Raw("<i class='mdi mdi-pencil-box' style='font-size: 25px;'></i>"));
        columns.Add(c => Html.Raw("<i class='mdi mdi-delete-circle' id='"+ c.marcId +"' style='font-size: 25px; cursor: pointer;'></i>")).Titled(Html.Raw("<i class='mdi mdi-delete-circle' style='font-size: 25px;'></i>"));
    }).Named("employees-grid").Filterable().Sortable().Empty("SIN MARCACIONES").Css("employee-grid").Pageable(pager =>
        {
            pager.PagesToDisplay = 20;
            pager.RowsPerPage = 50;
        })
    @*.Css("tablas acceso")*@
