@using PrincipalObjects.Objects
@model List<Report>

@{
    User user = (User)ViewData["ActiveUser"];
    ViewData["Title"] = "Reportes";
}

<div id="EditBlur" class="hasBlur">
</div>
<div class="EditReport-Container">

</div>
<div class="row p-0 mt-4">

    @foreach (Report rep in Model)
    {
        <div class="row p-0 m-0 justify-content-start">
            <div class="card mt-2 col-12 ">
                <div class="row p-0 m-0">
                    <div class="col-1"><i class="mdi mdi-table-large ReportIcon"></i></div>
                    <div class="col-4"><h5 class="">@rep.Name</h5></div>
                    <div class="col-4"><h5 class="">@rep.Description</h5></div>
                    <div class="col-1"><a class="buttonMakeReport" id="@rep.Id" href="#"><i id="@rep.Id" class="mdi mdi-pencil ReportIconEdit"></i></a></div>
                    <div class="col-1"><a class="buttonMakeReport" href="/Report/DescargarReporte?id=@rep.Id"><i id="@rep.Id" class="mdi mdi-delete ReportIconDelete"></i></a></div>
                    <div class="col-1"><a class="buttonMakeReport" href="/Report/DescargarReporte?id=@rep.Id"><i class="mdi mdi-play-box ReportIconPlay"></i></a></div>
                </div>
            </div>
        </div>
    }
</div>

<script>
    $(".ReportIconPlay").on("click", (e) => {
        StartLoader();

        setTimeout (StopLoader, 2000)
    } )

    $(".ReportIconEdit").on("click", (e) => {
        StartLoader();
        $('.EditReport-Container').empty();
        let id = e.target.getAttribute('id');

        $.ajax({
            url: '/Report/EditReport?id=' + id + '&userId=@user.Id',
            dataType: 'html',
            async: true,
            success: function (data) {
                $('.EditReport-Container').append(data);
            }
        });
        StopLoader();
    } )

</script>

<style>

    .ReportIcon {
        cursor: pointer;
        font-size: 50px;
        margin: 0px;
        padding: 0px;
        top: 30%;
        position: absolute;
        left: 30px;
    }

    .ReportIconEdit {
        cursor: pointer;
        font-size: 50px;
        margin: 0px;
        padding: 0px;
        top: 30%;
        position: absolute;
        right: 110px;
    }

    .ReportIconDelete {
        cursor: pointer;
        font-size: 50px;
        margin: 0px;
        padding: 0px;
        top: 30%;
        position: absolute;
        right: 60px;
    }

    .ReportIconPlay {
        cursor: pointer;
        font-size: 50px;
        margin: 0px;
        padding: 0px;
        top: 30%;
        position: absolute;
        right: 10px;
    }

</style>